type Query {
    cars: [Car]
    carById(id: ID!): Car
    brands: [Brand]
    motorcycles: [Motorcycle]
    vehicles: [Vehicle]
}

type Vehicle {
    id: ID
    model: String
    year: Int
    images: [String]
    subType: String
}

type Car {
    id: ID
    brand: Brand
    model: String
    year: Int
    images: [String]
    info: String
}

type Motorcycle {
    id: ID
    brand: Brand
    model: String
    year: Int
    images: [String]
    info: String
}

type Brand{
    id: ID
    name: String
}

type Mutation{
    createCar(model: String!, year: String!, images: [String], info: String!, brandId: ID!): Car
    updateCar(id: ID!, model: String!, year: String!, brandId: ID!): Car
    deleteCar(id: ID!): ID

    createMotorcycle(model: String!, year: String!, images: [String], info: String!, brandId: ID!): Motorcycle
    updateMotorcycle(id: ID!, model: String!, year: String!): Motorcycle
    deleteMotorcycle(id: ID!): ID

    createBrand(name: String!): Brand
    updateBrand(id: ID!, name: String!): Brand
    deleteBrand(id: ID!): ID
}
